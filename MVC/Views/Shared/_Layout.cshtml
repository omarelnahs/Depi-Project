<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="sidebar bg-dark">
            <div class="d-flex flex-column h-100">
                <!-- Brand/Logo -->
                <div class="sidebar-header p-3">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none">
                        <span class="fs-4">Dashboard</span>
                    </a>
                </div>

                <!-- Nav Items -->
                <ul class="nav nav-pills flex-column mb-auto px-3">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active text-white" : "text-white-50")">
                            <i class="bi bi-house-fill me-2"></i>
                            General
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Users" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active text-white" : "text-white-50")">
                            <i class="bi bi-people me-2"></i>
                            Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Products" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active text-white" : "text-white-50")">
                            <i class="bi bi-cart me-2"></i>
                            Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Orders" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active text-white" : "text-white-50")">
                            <i class="bi bi-file-earmark me-2"></i>
                            Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Stores" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Stores" ? "active text-white" : "text-white-50")">
                            <i class="bi bi-graph-up me-2"></i>
                            Stores
                        </a>
                    </li>
                </ul>

                <!-- Bottom Section (optional) -->
                <div class="dropdown border-top px-3 py-3">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://via.placeholder.com/30" alt="User" class="rounded-circle me-2" width="32" height="32">
                        <strong>User Name</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
